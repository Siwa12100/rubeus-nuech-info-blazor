@code {
    // Param√®tre callback pour notifier le parent d'un changement de phase
    [Parameter]
    public EventCallback OnPhaseChanged { get; set; }

    private List<ShopItem> allItems = new();
    private List<ShopItem> filteredItems = new();
    private ComponentType? selectedType = null;
    private string purchaseMessage = string.Empty;
    private string purchaseMessageClass = string.Empty;
    private int purchasedCount = 0;

    /// <summary>
    /// Initialisation de la composante
    /// </summary>
    protected override void OnInitialized()
    {
        allItems = ShopCatalog.GetAllItems();
        filteredItems = allItems;
        UpdatePurchasedCount();
    }

    /// <summary>
    /// Filtre les articles par type
    /// </summary>
    private void SelectType(ComponentType? type)
    {
        selectedType = type;
        
        if (selectedType == null)
        {
            filteredItems = allItems;
        }
        else
        {
            filteredItems = ShopCatalog.GetItemsByType(selectedType.Value);
        }
    }

    /// <summary>
    /// Ach√®te un article
    /// </summary>
    private async Task BuyItem(ShopItem item)
    {
        if (Game.BuyComponent(item))
        {
            purchaseMessage = $"‚úÖ {item.Name} achet√© avec succ√®s !";
            purchaseMessageClass = "success";
            UpdatePurchasedCount();
        }
        else
        {
            purchaseMessage = $"‚ùå Budget insuffisant pour {item.Name}";
            purchaseMessageClass = "error";
        }

        // Effacer le message apr√®s 3 secondes
        await Task.Delay(3000);
        purchaseMessage = string.Empty;
        StateHasChanged();
    }

    /// <summary>
    /// Met √† jour le compteur de composants achet√©s
    /// </summary>
    private void UpdatePurchasedCount()
    {
        purchasedCount = Game.State.Components.Count(c => c.State == ComponentState.BoughtNew);
    }

    /// <summary>
    /// Retourne la classe CSS correspondant √† la qualit√©
    /// </summary>
    private string GetQualityClass(ComponentQuality quality)
    {
        return quality switch
        {
            ComponentQuality.New => "new",
            ComponentQuality.Used => "used",
            ComponentQuality.Refurb => "refurb",
            _ => "new"
        };
    }

    /// <summary>
    /// Retourne le label correspondant √† la qualit√©
    /// </summary>
    private string GetQualityLabel(ComponentQuality quality)
    {
        return quality switch
        {
            ComponentQuality.New => "üÜï Neuf",
            ComponentQuality.Used => "‚ôªÔ∏è Occasion",
            ComponentQuality.Refurb => "üîß R√©cup",
            _ => "Inconnu"
        };
    }

    /// <summary>
    /// Passer √† la phase Montage
    /// </summary>
    private void GoToMontage()
    {
        if (purchasedCount > 0)
        {
            Game.State.Phase = GamePhase.Montage;
        }
    }
}
