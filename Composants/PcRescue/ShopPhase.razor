@using NuitInfo.Rubeus.PcRescue.Models
@using NuitInfo.Rubeus.PcRescue.Services
@inject PcRescueGameService Game

<div class="phase-container">
    <div class="phase-header">
        <h1>Phase 3 - Shop de composants</h1>
        <p class="phase-description">
            Utilisez votre budget pour acheter de nouveaux composants<br/>
            performants et √©cologiques pour am√©liorer le PC.
        </p>
    </div>

    <div class="phase-content">
        <!-- Affichage du budget disponible -->
        <div class="budget-display">
            <h3>üí∞ Budget disponible : @Game.State.Budget ‚Ç¨</h3>
            @if (Game.State.Budget <= 0)
            {
                <p class="budget-warning">Budget √©puis√©!</p>
            }
        </div>

        <!-- Filtres par type de composant -->
        <div class="shop-filters">
            <button class="filter-btn @(selectedType == null ? "active" : "")" @onclick="() => SelectType(null)">
                üì¶ Tous
            </button>
            <button class="filter-btn @(selectedType == ComponentType.Cpu ? "active" : "")" @onclick="() => SelectType(ComponentType.Cpu)">
                ‚öôÔ∏è Processeurs
            </button>
            <button class="filter-btn @(selectedType == ComponentType.Gpu ? "active" : "")" @onclick="() => SelectType(ComponentType.Gpu)">
                üéÆ Cartes graphiques
            </button>
            <button class="filter-btn @(selectedType == ComponentType.Ram ? "active" : "")" @onclick="() => SelectType(ComponentType.Ram)">
                üíæ M√©moire
            </button>
            <button class="filter-btn @(selectedType == ComponentType.PowerSupply ? "active" : "")" @onclick="() => SelectType(ComponentType.PowerSupply)">
                ‚ö° Alimentations
            </button>
            <button class="filter-btn @(selectedType == ComponentType.Storage ? "active" : "")" @onclick="() => SelectType(ComponentType.Storage)">
                üíø Stockage
            </button>
            <button class="filter-btn @(selectedType == ComponentType.Os ? "active" : "")" @onclick="() => SelectType(ComponentType.Os)">
                üñ•Ô∏è Syst√®mes
            </button>
        </div>

        <!-- Catalogue de composants -->
        <div class="shop-catalog">
            @if (filteredItems.Count == 0)
            {
                <div class="no-items">
                    <p>Aucun composant disponible avec ce filtre</p>
                </div>
            }
            else
            {
                <div class="components-grid">
                    @foreach (var item in filteredItems)
                    {
                        <div class="component-card">
                            <div class="card-header">
                                <h3>@item.Name</h3>
                                <span class="quality-badge @GetQualityClass(item.Quality)">
                                    @GetQualityLabel(item.Quality)
                                </span>
                            </div>
                            
                            <div class="card-body">
                                <p class="description">@item.Description</p>
                                
                                <div class="stats">
                                    <div class="stat">
                                        <span class="label">‚ö° Performance:</span>
                                        <span class="value">+@item.PerformanceBoost</span>
                                    </div>
                                    <div class="stat">
                                        <span class="label">üå± √âcologie:</span>
                                        <span class="value @(item.EcoScore >= 0 ? "eco-positive" : "eco-negative")">
                                            @(item.EcoScore >= 0 ? "+" : "")@item.EcoScore
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-footer">
                                <span class="cost">@item.Cost ‚Ç¨</span>
                                <button 
                                    class="btn-buy" 
                                    @onclick="() => BuyItem(item)"
                                    disabled="@(item.Cost > Game.State.Budget)">
                                    @(item.Cost > Game.State.Budget ? "Budget insuffisant" : "Acheter")
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- R√©sum√© des achats -->
        @if (Game.State.Components.Any(c => c.State == ComponentState.BoughtNew))
        {
            <div class="purchase-summary">
                <h3>üìã Composants achet√©s (@purchasedCount)</h3>
                <div class="purchased-items">
                    @foreach (var component in Game.State.Components.Where(c => c.State == ComponentState.BoughtNew))
                    {
                        <div class="purchased-item">
                            <span>@component.Id</span>
                            <span class="perf">‚ö°@component.BasePerf</span>
                            <span class="eco">üå±@component.BaseEco</span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Message de succ√®s -->
        @if (!string.IsNullOrEmpty(purchaseMessage))
        {
            <div class="purchase-message @purchaseMessageClass">
                @purchaseMessage
            </div>
        }

        <!-- Informations sur les choix -->
        <div class="shop-info">
            <p class="info-text">
                üí° Conseil : √âquilibrez performance et √©cologie pour maximiser votre score !
            </p>
            <p class="info-text">
                üéØ Les composants neufs donnent plus de performance mais moins de points √©cologiques.
            </p>
            <p class="info-text">
                ‚ôªÔ∏è Les composants d'occasion et r√©cup√©r√©s sont meilleurs pour l'environnement !
            </p>
        </div>

        <!-- Bouton pour passer √† la phase suivante -->
        <div class="action-zone">
            @if (purchasedCount > 0)
            {
                <button class="btn-primary" @onclick="GoToMontage">
                    Passer au montage ‚Üí (@purchasedCount composant@(purchasedCount > 1 ? "s" : ""))
                </button>
            }
            else
            {
                <button class="btn-primary" disabled title="Achetez au moins un composant">
                    Passer au montage (au moins 1 composant requis)
                </button>
            }
        </div>
    </div>
</div>

