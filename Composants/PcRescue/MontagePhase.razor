@using NuitInfo.Rubeus.PcRescue.Models
@using NuitInfo.Rubeus.PcRescue.Services
@inject PcRescueGameService Game

<div class="montage-phase">
    <!-- HUD -->
    <div class="hud">
        <div class="hud-item">
            <span class="hud-label">üí∞ Budget:</span>
            <span class="hud-value">@Game.State.Budget ‚Ç¨</span>
        </div>
        <div class="hud-item">
            <span class="hud-label">üå± √âco-Score:</span>
            <span class="hud-value">@Game.State.EcoScore</span>
        </div>
        <div class="hud-item">
            <span class="hud-label">‚ö° Performance:</span>
            <span class="hud-value">@Game.State.PerfScore</span>
        </div>
    </div>

    <h1 class="phase-title">Phase 4 - Montage & Installation</h1>

    <!-- Zone principale de montage -->
    <div class="main-content">
        <!-- Zone du PC avec emplacements pour installer les composants -->
        @if (!AllSlotsFilledAndOsInstalled())
        {
            <div class="pc-zone">
                <div class="pc-interior">
                    <img src="/pc-rescue-game/pc_vue1.png" alt="Int√©rieur du PC" class="pc-background"/>

                    <!-- Slots d'installation (zones de drop) -->
                    @foreach (var slot in GetAvailableSlots())
                    {
                        <div class="installation-slot @(IsDragOverSlot(slot) ? "drag-over" : "")"
                             style="@GetSlotPosition(slot)"
                             @ondragover="HandleDragOver"
                             @ondragover:preventDefault="true"
                             @ondragleave="HandleDragLeave"
                             @ondrop="@(() => HandleInstallComponent(slot))"
                             @ondrop:preventDefault="true">
                            
                            @if (IsSlotFilled(slot))
                            {
                                var installedComponent = GetComponentInSlot(slot);
                                if (installedComponent != null)
                                {
                                    <div class="installed-component">
                                        <img src="@installedComponent.ImagePath" alt="@installedComponent.Id" class="component-image"/>
                                        <div class="component-label">@GetSlotName(slot)</div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="empty-slot">
                                    <div class="slot-icon">üìå</div>
                                    <div class="slot-name">@GetSlotName(slot)</div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Message d'instruction -->
                @if (GetComponentsToInstall().Any())
                {
                    <p class="instruction-text">
                        ‚ö° Glissez les composants sur les emplacements pour les installer !
                    </p>
                }
            </div>

            <!-- Composants √† installer -->
            @if (GetComponentsToInstall().Any() || GetOsToInstall().Any())
            {
                <div class="components-to-install">
                    <!-- Composants mat√©riels -->
                    @if (GetPhysicalComponentsToInstall().Any())
                    {
                        <h3 class="install-title">Composants mat√©riels √† installer:</h3>
                        <div class="draggable-components">
                            @foreach (var component in GetPhysicalComponentsToInstall())
                            {
                                <div class="draggable-component"
                                     draggable="true"
                                     @ondragstart="() => HandleDragStart(component)"
                                     @ondragend="HandleDragEnd">
                                    <img src="@component.ImagePath" alt="@component.Id"/>
                                    <div class="component-info">
                                        <span class="component-name">@component.Name</span>
                                        <span class="component-perf">‚ö° +@component.BasePerf</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Syst√®me d'exploitation -->
                    @if (GetOsToInstall().Any())
                    {
                        <h3 class="install-title">Syst√®me d'exploitation:</h3>
                        <div class="os-selection">
                            @foreach (var osComponent in GetOsToInstall())
                            {
                                <div class="os-card" @onclick="() => HandleInstallOs(osComponent)">
                                    <img src="@osComponent.ImagePath" alt="@osComponent.Id"/>
                                    <div class="os-info">
                                        <span class="os-name">@osComponent.Name</span>
                                        <span class="os-description">Cliquez pour installer</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <!-- Tous les composants sont install√©s -->
            <div class="completion-message">
                <div class="success-icon">‚úÖ</div>
                <h2>Montage termin√© !</h2>
                <p>Tous vos composants ont √©t√© install√©s avec succ√®s.</p>
                <button class="btn-continue" @onclick="GoToScoreboard">
                    Voir les r√©sultats ‚Üí
                </button>
            </div>
        }
    </div>

    <!-- Overlay QTE -->
    @if (_showQte && _currentQteComponent != null)
    {
        <QteOverlay OnFinished="HandleQteFinished"/>
    }
</div>

