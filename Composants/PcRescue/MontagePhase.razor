@code {
    // Param√®tre callback pour notifier le parent d'un changement de phase
    [Parameter]
    public EventCallback OnPhaseChanged { get; set; }

    // Composant actuellement en QTE
    private PcComponent? _currentQteComponent = null;

    // Affichage de l'overlay QTE
    private bool _showQte = false;

    // Composant en cours de drag
    private PcComponent? _draggedComponent = null;

    // Slot actuellement survol√©
    private ComponentSlot? _currentDragOverSlot = null;

    /// <summary>
    /// R√©cup√®re les slots disponibles (CPU, GPU, RAM, Storage, PowerSupply)
    /// </summary>
    private IEnumerable<ComponentSlot> GetAvailableSlots()
    {
        return new[] { ComponentSlot.Cpu, ComponentSlot.Gpu, ComponentSlot.Ram, ComponentSlot.Storage, ComponentSlot.PowerSupply };
    }

    /// <summary>
    /// R√©cup√®re les composants √† installer (√©tat BoughtNew)
    /// </summary>
    private IEnumerable<PcComponent> GetComponentsToInstall()
    {
        return Game.State.Components.Where(c => c.State == ComponentState.BoughtNew);
    }

    /// <summary>
    /// V√©rifie que tous les slots sont remplis ET que l'OS est install√©
    /// </summary>
    private bool AllSlotsFilledAndOsInstalled()
    {
        // V√©rifier que tous les slots physiques sont remplis
        var allPhysicalSlotsFilled = GetAvailableSlots().All(slot => IsSlotFilled(slot));
        
        // V√©rifier que l'OS est install√©
        var osInstalled = Game.State.Components.Any(c => c.Slot == ComponentSlot.Os && c.State == ComponentState.InstalledNew);
        
        return allPhysicalSlotsFilled && osInstalled;
    }

    /// <summary>
    /// R√©cup√®re les composants mat√©riels √† installer (excluant l'OS)
    /// </summary>
    private IEnumerable<PcComponent> GetPhysicalComponentsToInstall()
    {
        return Game.State.Components.Where(c => c.State == ComponentState.BoughtNew && c.Slot != ComponentSlot.Os);
    }

    /// <summary>
    /// R√©cup√®re les syst√®mes d'exploitation √† installer
    /// </summary>
    private IEnumerable<PcComponent> GetOsToInstall()
    {
        return Game.State.Components.Where(c => c.State == ComponentState.BoughtNew && c.Slot == ComponentSlot.Os);
    }

    /// <summary>
    /// R√©cup√®re les composants d√©j√† install√©s (√©tat InstalledNew)
    /// </summary>
    private IEnumerable<PcComponent> GetComponentsInstalled()
    {
        return Game.State.Components.Where(c => c.State == ComponentState.InstalledNew);
    }

    /// <summary>
    /// Retourne la position CSS d'un slot
    /// </summary>
    private string GetSlotPosition(ComponentSlot slot)
    {
        return slot switch
        {
            ComponentSlot.Cpu => "top: 25%; left: 30%;",
            ComponentSlot.Gpu => "top: 40%; left: 55%;",
            ComponentSlot.Ram => "top: 20%; left: 60%;",
            ComponentSlot.Storage => "top: 60%; left: 50%;",
            ComponentSlot.PowerSupply => "top: 75%; left: 30%;",
            _ => "top: 50%; left: 50%;"
        };
    }

    /// <summary>
    /// Retourne le nom d'un slot
    /// </summary>
    private string GetSlotName(ComponentSlot slot)
    {
        return slot switch
        {
            ComponentSlot.Cpu => "CPU",
            ComponentSlot.Gpu => "GPU",
            ComponentSlot.Ram => "RAM",
            ComponentSlot.Storage => "Stockage",
            ComponentSlot.PowerSupply => "Alim",
            _ => "?"
        };
    }

    /// <summary>
    /// V√©rifie si un slot est rempli
    /// </summary>
    private bool IsSlotFilled(ComponentSlot slot)
    {
        return Game.State.Components.Any(c => c.Slot == slot && c.State == ComponentState.InstalledNew);
    }

    /// <summary>
    /// R√©cup√®re le composant install√© dans un slot
    /// </summary>
    private PcComponent? GetComponentInSlot(ComponentSlot slot)
    {
        return Game.State.Components.FirstOrDefault(c => c.Slot == slot && c.State == ComponentState.InstalledNew);
    }

    /// <summary>
    /// G√®re le d√©but du drag
    /// </summary>
    private void HandleDragStart(PcComponent component)
    {
        _draggedComponent = component;
    }

    /// <summary>
    /// G√®re la fin du drag
    /// </summary>
    private void HandleDragEnd()
    {
        _draggedComponent = null;
        _currentDragOverSlot = null;
    }

    /// <summary>
    /// G√®re le survol d'un slot
    /// </summary>
    private void HandleDragOver()
    {
        // N√©cessaire pour permettre le drop
    }

    /// <summary>
    /// G√®re le d√©part du survol d'un slot
    /// </summary>
    private void HandleDragLeave()
    {
        _currentDragOverSlot = null;
    }

    /// <summary>
    /// V√©rifie si un slot est actuellement survol√©
    /// </summary>
    private bool IsDragOverSlot(ComponentSlot slot)
    {
        return _currentDragOverSlot == slot;
    }

    /// <summary>
    /// G√®re l'installation d'un composant dans un slot
    /// </summary>
    private void HandleInstallComponent(ComponentSlot slot)
    {
        if (_draggedComponent == null || _draggedComponent.State != ComponentState.BoughtNew)
            return;

        // V√©rifie que le slot correspond au type du composant
        if (_draggedComponent.Slot != slot)
        {
            return; // Slot incompatible
        }

        // Lance le QTE d'installation
        _currentQteComponent = _draggedComponent;
        _showQte = true;
        _draggedComponent = null;
        _currentDragOverSlot = null;
    }

    /// <summary>
    /// G√®re l'installation du syst√®me d'exploitation
    /// </summary>
    private void HandleInstallOs(PcComponent osComponent)
    {
        if (osComponent.State != ComponentState.BoughtNew)
            return;

        // Lance le QTE d'installation pour l'OS
        _currentQteComponent = osComponent;
        _showQte = true;
    }

    /// <summary>
    /// G√®re la fin du QTE d'installation
    /// </summary>
    private void HandleQteFinished(QteResult result)
    {
        if (_currentQteComponent != null)
        {
            Game.ApplyQteInstall(_currentQteComponent, result);
            _currentQteComponent = null;
        }

        _showQte = false;
    }

    /// <summary>
    /// Passe √† la phase Scoreboard
    /// </summary>
    private async Task GoToScoreboard()
    {
        Game.State.Phase = GamePhase.Scoreboard;
        await OnPhaseChanged.InvokeAsync();
    }
}
