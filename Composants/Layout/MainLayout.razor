@using NuitInfo.Rubeus.Composants
@inherits LayoutComponentBase
@inject IJSRuntime JS
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<!-- Snake Game Easter Egg Modal -->
<SnakeGameModal @ref="snakeModalRef" IsOpen="@isModalOpen" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

<ChatWidget />

@code {
    private SnakeGameModal? snakeModalRef;
    private bool isModalOpen = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize snake-game.js and set up callback
            await JS.InvokeVoidAsync("initializeSnakeEasterEgg", DotNetObjectReference.Create(this));
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    [JSInvokable]
    public async Task OpenSnakeEasterEgg()
    {
        isModalOpen = true;
        StateHasChanged();
        
        if (snakeModalRef != null)
        {
            await snakeModalRef.Open();
        }
    }
}
